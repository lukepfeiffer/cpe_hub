.panel.primary
  .panel-header
    %h1
      = "#{course.name} #{course.course_code}"
      - if current_user.present? && current_user.access_rights?(4)
        = link_to edit_course_path(course.id) do
          %button.edit Edit
  .panel-body
    %p= course.description.html_safe
    %p
      %b Difficulty:
      = course.difficulty
    %p
      %b Course type:
      = course.course_type

    %h1 Professors
    .course-professors
      .professors
        - course.professors.each do |professor|
          .professor
            %p.name= link_to professor.full_name, professor_path(professor.id)
            %p.headshot= image_tag("https://mil.ufl.edu/ems/SchwartzE.jpg")

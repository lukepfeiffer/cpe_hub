.panel.primary
  .panel-header
    %h1
      = "#{course.name} #{course.course_code}"
      - if current_user.present? && current_user.access_rights?(4)
        = link_to edit_course_path(course.id) do
          %button.edit Edit
  .panel-body
    %p= course.description.html_safe
    %p
      %b Difficulty:
      = course.difficulty
    %p
      %b Course type:
      = course.course_type

    %h1 Professors
    .professors
      .professor
        %p.name= link_to "Dr. Schwartz", root_path
        %p.headshot= image_tag("https://mil.ufl.edu/ems/SchwartzE.jpg")

      .professor
        %p.name= link_to  "Dr. Gugel", root_path
        %p.headshot= image_tag("https://www.ece.ufl.edu/sites/default/files/pictures/styles/user_profile/public/pictures/picture-300-1369161638.jpg?itok=IEoUMJc-")

      .professor
        %p.name= link_to  "Dave Smalls", root_path
        %p.headshot= image_tag("https://bloximages.chicago2.vip.townnews.com/alligator.org/content/tncms/assets/v3/editorial/c/d4/cd46575c-282e-11e0-b2ce-001cc4c03286/4d3e3c071bd3e.image.jpg")

= form_for course do |f|
  %fieldset
    .inline
      %span.item
        = f.label :name
        = f.text_field :name

      %span.item
        = f.label :course_code
        = f.text_field :course_code, placeholder: "FOO1111"
      %br.clear_both

    .inline
      %span.item
        = f.label :course_type
        = f.select :course_type, options_for_select(course_types)

      %span.item
        = f.label :difficulty
        = f.number_field :difficulty, within: 1..10
      %br.clear_both

    = f.label :description
    = f.trix_editor :description, id: "course_editor"

  %fieldset.actions
    = f.submit "Save"

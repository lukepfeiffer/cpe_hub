.admin-actions
  = link_to "Create FAQ", new_faq_path, class: "faq-link"
  = link_to "Create Course", new_course_path, class: "course-link"
  = link_to "Create Professor", new_professor_path, class: "prof-link"

.panel.primary
  .panel-header
    %h1= link_to "Professors", professors_path
  .panel-body
    .professors
      - professors.each do |prof|
        .professor
          %p= link_to prof.full_name, professor_path(prof.id)
          %p= prof.description.html_safe

.panel.primary
  .panel-header
    %h1= link_to "Courses", courses_path
  .panel-body
    .courses
      - courses.each do |course|
        .course
          %p= link_to course.name, course_path(course.id)
          %p= course.desc_preview

.panel.primary
  .panel-header
    %h1= link_to "FAQS", faqs_path
  .panel-body
    .faqs
      - faqs.each do |faq|
        .faq
          %p= link_to faq.question, faq_path(faq.id)
          %p= faq.answer.html_safe

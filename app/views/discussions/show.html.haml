.panel.primary
  .panel-header
    %h1
      = "#{discussion.question} (#{discussion.course.try(&:course_code)})"
      - if current_user.present? && current_user.access_rights?(4)
        = link_to edit_discussion_path(discussion.id) do
          %button.edit Edit
  .panel-body
    = discussion.description
    = discussion.user.try(&:username)
